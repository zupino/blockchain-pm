{
    "name": "Blockchain PM",
    "description": "Trustless PM settlement",
    "key": "com.example.myapp",
    "baseUrl": "{{localBaseUrl}}",
	"authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "read", "write"
    ],
    "vendor": {
        "name": "Zupo GmbH",
        "url": "{{localBaseUrl}}"
    },
    "apiVersion": 1,
    "modules": {
        "webPanels": [
            {
                "location": "atl.jira.view.issue.left.context",
				"layout": {
					"width": "100%",
					"height": "25px"
				},
                "url": "accept-assignment-panel?id={issue.id}&prjId={project.id}",
                "weight": 100,
                "name": {
                    "value": "Accept assignment panel"
                },
                "key": "accept-assignment-panel"
            }
        ],
        "webhooks": [
            {
                "event": "project_created",
                "url": "/project-created"
            },
			{
				"event": "jira:issue_created",
				"url":	"/issue-created"
			},
			{
				"event": "jira:issue_updated",
				"url": "/issue-updated"
			}
        ],
        "jiraIssueFields": [
            {
                "key": "issue-blockchain-status",
                "name": {
                    "value": "BlockchainStatus"
                },
                "description": {
                    "value": "The status of the corresponding blockchain Task"
                },
                "type": "text"
            }
        ]
    }
}
